#cloud-config
manage_etc_hosts: true
fqdn: {{ fqdn }}
hostname: {{ hostname }}
users:
  - default
  - name: ansible
    gecos: ansible
    shell: /bin/bash
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    ssh_pwauth: False
    ssh_authorized_keys:
      - ssh-rsa 
apt_upgrade: true
apt_mirror: http://us.archive.ubuntu.com/ubuntu/
apt_sources:
  - source: "deb http://ppa.launchpad.net/ondrej/php/ubuntu xenial main"
    keyid: E5267A6C
    filename: ondrej-php-ppa.list
  - source: "deb http://ppa.launchpad.net/ondrej/apache2/ubuntu xenial main"
    keyid: E5267A6C
    filename: ondrej-apache2-ppa.list
packages:
  - python-software-properties
  - software-properties-common
  - language-pack-en-base
  - apache2
  - php7.2
  - memcached
  - libmemcached-tools
  - php-pear
  - php7.2-curl
  - php7.2-dev
  - php7.2-gd
  - php7.2-mbstring
  - php7.2-zip
  - php7.2-mysql
  - php7.2-xml
  - mysql-server
  - mysql-client
  - php-memcached
write_files:
  - path: /var/www/html/env.php
    content: |
      define( 'DB_NAME', '{{ db_name }}' );
      define( 'DB_USER', '{{ db_user }}' );
      define( 'DB_PASSWORD', '{{ db_password }}' );
      define( 'DB_HOST', '{{ db_host }}' );
      define( 'BBDB_NAME', DB_NAME );
      define( 'BBDB_USER', DB_USER );
      define( 'BBDB_PASSWORD', DB_PASSWORD );
      define( 'BBDB_HOST', DB_HOST );
      $is_debug = isset( $_GET['bbg_is_debug'] );
      define( 'WP_DEBUG', $is_debug );
      define( 'WP_DEBUG_DISPLAY', false );
      define( 'WP_DEBUG_LOG', true );
      define( 'SCRIPT_DEBUG', true );
      if ( ! empty( $_GET['debug_queries'] ) ) {
	        define( 'SAVEQUERIES', true );
      }
      define( 'DO_SHARDB', {{ do_shardb }} );
      $shardb_prefix = '{{ shardb_prefix }}';
      $shardb_dataset = '{{ shardb_dataset }}';
      define( 'DOMAIN_CURRENT_SITE', '{{ domain_current_site }}' );
      define( 'PATH_CURRENT_SITE', '/' );
      define( 'WPCOM_API_KEY', '{{ wpcom_api_key }}' );
      define( 'GF_LICENSE_KEY', '{{ gf_license_key }}' );
      define( 'GRAVITYPERKS_LICENSE_KEY', '{{ gravityperks_license_key }}' );
      @ini_set( 'log_errors', WP_DEBUG && WP_DEBUG_LOG ? 'On' : 'Off' );
      @ini_set('display_errors', WP_DEBUG && WP_DEBUG_DISPLAY ? 'On' : 'Off' );
      @ini_set('error_log','/var/log/apache2/php_error.log');
      function bbg_querytest() {
	      global $wpdb;
	      return;
	      if ( ! empty( $_GET['cc'] ) ) {
	      }
	      if ( is_super_admin() && ! empty( $_GET['flush'] ) ) {
		      wp_cache_flush();
		      apc_clear_cache( 'user' );
	      }
	      return;
	      if ( ! empty( $_GET['debug_queries'] ) ) {
		      echo '<pre>';
		      print_r( $wpdb->queries );
		      echo '</pre>';
	      }
      }
      register_shutdown_function( 'bbg_querytest' );
      function _b( $e ) {
      	$e = print_r( $e, true );
      	error_log( '[' . date( 'Y-m-d H:i:s' ) . '] ' . $e . "\n", 3, ABSPATH . '/wp-content/bbg-debug.log' );
      }
runcmd:
  - update-alternatives --set php /usr/bin/php7.2
  - a2enmod php7.2
  - sed -i 's/^-m 64/-m 512/g' /etc/memcached.conf
  - systemctl restart apache2
  - systemctl restart memcached
  - systemctl restart mysql
  - rm -f /var/www/html/index.html
  - git clone http://github.com/livinglab/openlab.git /var/www/html/
  - echo '<?php phpinfo();' > /var/www/html/php_info.php
